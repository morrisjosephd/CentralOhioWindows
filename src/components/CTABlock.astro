---
interface Props {
  heading?: string;
  description?: string;
  buttonText?: string;
  buttonHref?: string;
}

const {
  heading = 'Ready for Your Free Estimate?',
  description = 'Get matched with a trusted local window contractor. No pressure, no spam.',
  buttonText = 'Get My Free Quote',
  buttonHref = '/free-quote',
} = Astro.props;
---

<section class="bg-primary text-primary-content py-16">
  <div class="max-w-3xl mx-auto px-4 text-center">
    <h2 class="text-3xl font-bold mb-4">{heading}</h2>
    <p class="text-lg mb-8">{description}</p>
    <a href={buttonHref} class="btn btn-outline btn-lg border-white text-white hover:bg-white hover:text-primary">
      {buttonText}
    </a>
  </div>
</section>
