---
interface Props {
  heading?: string;
}

const { heading = 'Get Your Free Window Replacement Quote' } = Astro.props;
---

<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <h2 class="card-title text-2xl font-bold justify-center mb-4">{heading}</h2>

    <form
      netlify
      name="lead-capture"
      method="POST"
      data-netlify="true"
      netlify-honeypot="bot-field"
      action="/thank-you"
      class="space-y-4"
    >
      <input type="hidden" name="form-name" value="lead-capture" />
      <p class="hidden">
        <label>Don't fill this out: <input name="bot-field" /></label>
      </p>

      <!-- Full Name -->
      <fieldset class="fieldset">
        <label class="label" for="name">Full Name</label>
        <input
          type="text"
          id="name"
          name="name"
          class="input w-full"
          placeholder="John Smith"
          required
        />
      </fieldset>

      <!-- Phone Number -->
      <fieldset class="fieldset">
        <label class="label" for="phone">Phone Number</label>
        <input
          type="tel"
          id="phone"
          name="phone"
          class="input w-full"
          placeholder="(614) 555-1234"
          required
        />
      </fieldset>

      <!-- Email -->
      <fieldset class="fieldset">
        <label class="label" for="email">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          class="input w-full"
          placeholder="john@example.com"
          required
        />
      </fieldset>

      <!-- Address or ZIP -->
      <fieldset class="fieldset">
        <label class="label" for="address">Address or ZIP Code</label>
        <input
          type="text"
          id="address"
          name="address"
          class="input w-full"
          placeholder="123 Main St or 43215"
          required
        />
      </fieldset>

      <!-- Number of Windows -->
      <fieldset class="fieldset">
        <label class="label" for="window-count">Number of Windows</label>
        <select id="window-count" name="window-count" class="select w-full">
          <option disabled selected>Select number of windows</option>
          <option>1-3 windows</option>
          <option>4-7 windows</option>
          <option>8-12 windows</option>
          <option>13+ windows</option>
        </select>
      </fieldset>

      <!-- Project Timeline -->
      <fieldset class="fieldset">
        <label class="label" for="timeline">Project Timeline</label>
        <select id="timeline" name="timeline" class="select w-full">
          <option disabled selected>When do you need this done?</option>
          <option>As soon as possible</option>
          <option>Within 1 month</option>
          <option>1-3 months</option>
          <option>Just researching</option>
        </select>
      </fieldset>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-primary btn-lg w-full">
        Get My Free Quote
      </button>
    </form>

    <p class="text-center text-sm text-base-content/60 mt-4">
      Your information is safe. We only share it with one vetted local contractor.
    </p>
  </div>
</div>
