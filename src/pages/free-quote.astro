---
import BaseLayout from '../layouts/BaseLayout.astro';
import LeadCaptureForm from '../components/LeadCaptureForm.astro';
---

<BaseLayout
  title="Get a Free Window Replacement Quote | Central Ohio Windows"
  description="Request your free, no-obligation window replacement quote. We'll match you with one trusted local contractor in Central Ohio. No pressure, no spam."
>
  <main class="py-16 px-4">
    <div class="max-w-5xl mx-auto">
      <!-- Heading Area -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold mb-4">Get Your Free Window Replacement Quote</h1>
        <p class="text-lg text-base-content/70">
          Tell us about your project and we'll match you with a trusted local contractor.
        </p>
      </div>

      <!-- Two-column layout: form + trust signals -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-10 items-start">
        <!-- Left: Lead Capture Form (2/3 width on desktop) -->
        <div class="lg:col-span-2">
          <LeadCaptureForm />
        </div>

        <!-- Right: Trust Signals (1/3 width on desktop) -->
        <div class="lg:col-span-1">
          <div class="card bg-base-200 shadow-md">
            <div class="card-body">
              <h2 class="card-title text-xl font-semibold mb-4">Why Choose Us</h2>
              <ul class="space-y-4">
                <li class="flex items-start gap-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-success shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>No spam â€” ever</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-success shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>One contractor, not five</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-success shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>Your info stays private</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-success shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>Free, no-obligation quote</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-success shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>Response within 24 hours</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
